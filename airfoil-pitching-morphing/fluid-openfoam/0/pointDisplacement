FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointDisplacement;
}

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    outlet
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    flap
    {
        // type            fixedValue;
        // value           $internalField;
        type            angularOscillatingDisplacement;
        value		uniform (0 0 0);
        // value           $internalField;
        axis		(0 0 1);
        origin		(0 0 0);
        angle0		0;
        amplitude	0.2;
        omega		10;
    }
    
    upperWall
    {
        type            slip;
    }

    lowerWall
    {
        type            slip;
    }

    frontAndBack
    {
        type            empty;
    }
}
